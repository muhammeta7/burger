<h3>Burger List</h3>
<ul>
  {{#each burgerList}}
    <li>
      <p> {{this.id}}. {{this.burgerName}}
        <form action="/delete?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Devour It!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>


<div class="panel panel-default">
  <div class="panel-body">
    
    <h4>Create a Burger</h4>
    <form method="POST" action="/create" class="button-size">
      <textarea type="text" name="burger"></textarea>
      <br>
      <button type="submit">Save Burger!</button>
    </form>

  </div>
</div>